<main>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_.jpg" %>
   <table class="table">
    <tbody>
     <tr>
       <th>name</th>
       <th><%= @user.name %></th>
     </tr>

     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </tbody>
   </table>
     <%= link_to "", edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog'%>
     <%= render 'books/newbook', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class= "table">
    <tr>
     <td>
      <%= link_to user_path(@user) do %>
       <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_.jpg" %>
      <br><%= @user.name %>
      <% end %>
     </td>
     <td><%= @book_find.title %></td>
     <td><%= @book_find.body %></td>
     <td><% if @user.id == current_user.id %>
      <%= link_to "Edit", edit_book_path(@book_find)  %></td>
      <% end %>
     <td>
      <% if @user.id == current_user.id %>
       <%= link_to "Destroy", book_path(@book_find), method: :delete, data: {confirm: "本当に消しますか"} %>
     </td>
      <% end %>
    </tr>
   </table>
  </div>
 </div>
</div>

</main>
